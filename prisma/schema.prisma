// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Profile {
  id        String     @id @default(cuid())
  userId    Int        @unique
  name      String
  imageUrl  String
  email     String     @unique
  Timeslot  Timeslot[]
}

model Timeslot {
  id      String     @id @default(cuid())
  start   DateTime
  members Profile[]  @relation(references: [id])
}

model Schedule {
  id        String     @id @default(cuid())
  title     String
  days      String[]
  startTime String
  endTime   String
  passwd    String
  timeslots Timeslot[] @relation(references: [id])
  members   Profile[]  @relation(references: [id])
}